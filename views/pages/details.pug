extends ../base.pug 

block variables   
  - var template = 'details'

block content 
  .details  
    .details__wrapper 
      figure.details__media  
        img.details__media__image(src=product.data.image.url alt=product.data.image.alt)

    .details__information 
      p.details__information__collection=product.data.collection.data.title

      h1.details__information__title=product.data.title 

      .details__information__content   
        .details__information__highlights 
          each highlight in product.data.highlights 
            p.details__information__highlight 
              svg.details__information__highlight__icon 
                use(xlink:href=`sprite-${highlight.highlights_icon.toLowerCase()}`)

              span.details__information__highlight__text=highlight.highlights_text

        .details__information__list  
          each item in product.data.information 
            p.detail__information__item
            strong.detail__information__item__title=item.information_label
            span.detail__ionformation__item__description=item.information_description

        a.detail__information__link(href=product.data.link_url.url target="_blank")=product.data.link_text